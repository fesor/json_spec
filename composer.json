{
    "name": "fesor/json_spec",
    "description": "Easily handle JSON Structures with PhpSpec and Behat",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Protko",
            "email": "fesors@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
          "JsonSpec\\Behat\\": "extensions/behat/src/",
          "JsonSpec\\PhpSpec\\": "extensions/phpspec/src/",
          "JsonSpec\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "require": {
        "php": ">=5.4.0",
        "seld/jsonlint": "~1.1.2"
    },
    "require-dev": {
        "phpspec/phpspec": "2.1.*@dev",
        "behat/behat": "~3.0.13@stable",
        "fabpot/php-cs-fixer": "~0.5",
        "henrikbjorn/phpspec-code-coverage": "~0.2"
    },
    "conflict": {
        "behat/behat": "<3.0.13"
    }
}
